<div class="steel_order-container">
	<div class="steel_order">
		<h3>{{type}}</h3>
		<table class="order_details">
			<tr>
				<th>Section: </th><td>{{section}}</td>
			</tr>
			<tr>
				<th>Grade: </th><td>{{grade}}</td>
			</tr>
			<tr>
				<th>Length: </th><td>{{length}}</td>
			</tr>
			<tr>
				<th>Quantity: </th><td> <input id="order_quantity" class="form-control" type="number" value={{quantity}}></td>
			</tr>
			<tr>
				<th>Job No: </th><td> <input id="job_number" class="form-control" type="number"></td>
			</tr>
			<tr>
				<th>Project: </th><td> <input id="location" class="form-control" type="text"></td>
			</tr>
			<tr>
				<span><th>Date Required:</th><td> <input readonly="true" id="date_req" class="form-control" type="text"></td></span>
			</tr>
		</table>
		<div class="hint">Item Available After: {{date_col}}</div>
		<button class="confirm_order">Confirm</button>
		<button class="cancel_order">Cancel</button>
	</div>
	<div class="confirmation">
		<div class="confirm_header">
			<h4>Order Confirmed!</h4>
		</div>
		<div class="text">
			<p>Your order has been confirmed!</p>
		</div>
		<div class="actions">
			<button id="view">View</button>
			<button id="home">Home</button>
		</div>
	</div>
</div>
<div class="error">
	<span class="glyphicon glyphicon-remove-circle icon" aria-hidden="true"></span>
	<div class="text">
		
	</div>
</div>